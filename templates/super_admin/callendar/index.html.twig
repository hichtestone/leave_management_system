            size: 'auto',
            timeZone: 'Europe/Paris',
            headerToolbar: {
                start:'prev,next today',
                center: 'title',
                end: 'dayGridMonth,timeGridWeek,timeGridDay',
            },

            events: {{ result|raw }},
            editable : false,
            EventResizableFromStart: true,
            eventTimeFormat: { // like '14:30:00'
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                meridiem: false
            }
        })
        callendar.render();
    }
