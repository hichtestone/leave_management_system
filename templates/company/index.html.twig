{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Logo</th>
                <th>Adress</th>
                <th>Country</th>
                <th>Zipcode</th>
                <th>PhoneNumber</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Site</th>
                <th>UpadatedAt</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.adress }}</td>
                <td>{{ company.country }}</td>
                <td>{{ company.zipcode }}</td>
                <td>{{ company.phoneNumber }}</td>
                <td>{{ company.fax }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.site }}</td>
                <td>{{ company.upadatedAt ? company.upadatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ company.createdAt ? company.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
