                </div>
                {% if attest is not empty %}
                    {% for att in attest %}
                        <div class="card-body text-center">
                            <div class="time-list">
                                <div class="dash-stats-list">
                                    <span class="btn btn-outline-warning"> {{ att.filingAt ? att.filingAt|date('Y-m-d') : '' }} </span>
                                    <p class="mb-0">Date de la demande</p>
                                </div>
                                {% if constant('TYPE_TRAVAIL', att) == att.status %}
                                    <div class="dash-stats-list">
                                        <span class="btn btn-outline-primary"> {{ constant('TYPE', att)[att.type] }} </span>
                                        <p class="mb-0">Type d'attestation</p>
                                    </div>
                                {% endif %}
                                {% if constant('TYPE_TITULARISATION', att) == att.status %}
                                    <div class="dash-stats-list">
                                        <span class="btn btn-outline-primary">  {{ constant('TYPE', att)[att.type] }} </span>
                                        <p class="mb-0">Type d'attestation</p>
                                    </div>
