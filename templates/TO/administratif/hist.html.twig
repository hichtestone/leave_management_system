                                    <div class="dash-stats-list">
                                        <span class="btn btn-outline-primary">  {{ constant('TYPE', att)[att.type] }} </span>
                                        <p class="mb-0">Type d'attestation</p>
                                    </div>
                                {% endif %}
                                {% if constant('STATUS_SENT', att) == att.status %}
                                    <div class="dash-stats-list">
                                        <span class="btn btn-outline-info">{{ constant('STATUS', att)[att.status] }}</span>
                                        <p class="mb-0">Statut</p>
                                    </div>
                                {% endif %}
                                {% if constant('STATUS_DONE', att) == att.status %}
                                    <div class="dash-stats-list">
                                        <span class="btn btn-outline-success">{{ constant('STATUS', att)[att.status] }}</span>
                                        <p class="mb-0">Statut</p>
                                    </div>
                                {% endif %}
